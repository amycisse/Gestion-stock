<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>

        <nav class="py-2 bg-dark border-bottom">
          <div class="container d-flex flex-wrap">
           <div class="dropdown">
               <a class="nav nav-link dropdown-toggle text-white" role="button" data-bs-toggle="dropdown" aria-expanded="false">
               Categorie
               </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDarkDropdownDashboard">
                  <li><a class="dropdown-item" href="{{ path('app_categorie_index') }}">Lister</a></li>
                  <li><a class="dropdown-item" href="{{ path('app_categorie_new') }}">Ajouter</a></li>
                </ul>
         </div>
         <div class="dropdown">
               <a class="nav nav-link dropdown-toggle text-white" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Produit
               </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDarkDropdownAdd">
                  <li><a class="dropdown-item" href="{{ path('app_produit_new')}}">Ajouter</a></li>
                  <li><a class="dropdown-item" href="{{ path('app_produit_index')}}">Lister</a></li>
                </ul>
         </div>
         <div class="dropdown">
               <a class="nav nav-link dropdown-toggle text-white" role="button" data-bs-toggle="dropdown" aria-expanded="false">
               Entree
               </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDarkDropdownAdd">
                  <li><a class="dropdown-item" href="{{ path('app_entree_new') }}">Ajouter</a></li>
                  <li><a class="dropdown-item" href="{{ path('app_entree_index') }}">Lister</a></li>
                </ul>
         </div>
         <div class="dropdown">
               <a class="nav nav-link dropdown-toggle text-white" role="button" data-bs-toggle="dropdown" aria-expanded="false">
               Sortie
               </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDarkDropdownAdd">
                  <li><a class="dropdown-item" href="{{ path('app_sortie_new') }}">Ajouter</a></li>
                  <li><a class="dropdown-item" href="{{ path('app_sortie_index') }}">Lister</a></li>
                </ul>
         </div>
        </div>
      </nav> 

      <div class="container">
          <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
                <a class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none" href="#">
                    <span class="fs-4">Mon Blog</span>
                </a>

                <ul class="nav nav-pills">
                  <li class="nav-item">
                   <a class="nav-link text-dark" href="{{ path('app_register') }}">S'inscrire</a>
                  </li>
                  <li class="nav-item">
                   <a class="nav-link text-dark" href="#">Se connecter</a>
                  </li>
                </ul>
            </header>
        </div>

        {% block body %}{% endblock %}
        <div class="container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
            <div class="col-md-4 d-flex align-items-center">
                <span class="copyright">© {{ 'now'|date('Y') }} Tout droit reserve</span>
            </div>
        </footer>
    </div>
    </body>
</html>
