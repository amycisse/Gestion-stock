<div class="container col-md-8">
    <h1>Sortie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sortie.id }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ sortie.quantite }}</td>
            </tr>
