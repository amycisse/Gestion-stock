{% extends 'base.html.twig' %}

{% block title %}Entree index{% endblock %}

{% block body %}
<div class="container col-md-8">
    <h1>Entree index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantite</th>
                <th>Prix</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entree in entrees %}
            <tr>
                <td>{{ entree.id }}</td>
                <td>{{ entree.quantite }}</td>
                <td>{{ entree.prix }}</td>
                <td>{{ entree.date ? entree.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_entree_show', {'id': entree.id}) }}" class="btn btn-success">show</a>
                    <a href="{{ path('app_entree_edit', {'id': entree.id}) }}" class="btn btn-info">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('app_entree_new') }}">Create new</a> #}
</div>
{% endblock %}
